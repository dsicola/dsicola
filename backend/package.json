{
  "name": "dsicola-backend",
  "version": "1.0.0",
  "description": "DSICOLA Backend - Node.js + Express + PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bash -c 'lsof -ti :3001 2>/dev/null | xargs kill -9 2>/dev/null; sleep 1; exec tsx watch src/server.ts'",
    "dev:raw": "bash -c 'lsof -ti :3001 2>/dev/null | xargs kill -9 2>/dev/null; sleep 1; exec tsx watch src/server.ts'",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:reset:force": "prisma migrate reset --force",
    "script:verificar-alunos": "tsx scripts/verificar-corrigir-role-aluno.ts",
    "script:diagnostico-professor": "tsx scripts/diagnostico-professor.ts",
    "script:criar-professor": "tsx scripts/criar-professor.ts",
    "script:validate-rbac": "tsx scripts/validate-rbac-consistency.ts",
    "script:listar-estudantes": "tsx scripts/listar-estudantes.ts",
    "script:definir-senha-teste": "tsx scripts/definir-senha-teste-estudante.ts",
    "script:validar-perfil-estudante": "tsx scripts/validar-perfil-estudante.ts",
    "test:perfil-estudante": "tsx scripts/test-perfil-estudante.ts",
    "test:perfil-professor": "tsx scripts/test-perfil-professor.ts",
    "test:professor-fluxo-completo": "tsx scripts/test-professor-fluxo-completo.ts",
    "test:admin-fluxo-completo": "tsx scripts/test-admin-fluxo-completo.ts",
    "test:fluxo-ano-letivo": "tsx scripts/test-fluxo-ano-letivo-completo.ts",
    "test:criterio-fluxo-completo": "tsx scripts/test-criterio-fluxo-completo.ts",
    "test:criterio-seguranca": "tsx scripts/test-criterio-seguranca.ts",
    "test:infraestrutura": "tsx scripts/test-infraestrutura.ts",
    "test:multi-tenant": "tsx scripts/test-multi-tenant-seguranca.ts",
    "test:saft": "tsx scripts/test-saft-multi-tenant.ts",
    "seed:multi-tenant": "tsx scripts/seed-multi-tenant-test.ts",
    "test:multi-tenant:full": "tsx scripts/seed-multi-tenant-test.ts && tsx scripts/test-multi-tenant-seguranca.ts",
    "test:diferenciacao-sec-sup": "tsx scripts/test-diferenciacao-secundario-superior.ts",
    "test:criterio-estabilidade": "tsx scripts/test-criterio-estabilidade.ts",
    "test:pos-fluxo-completo": "tsx scripts/test-pos-fluxo-completo.ts",
    "test:secretaria-fluxo-completo": "tsx scripts/test-secretaria-fluxo-completo.ts",
    "test:estudante-fluxo-completo": "tsx scripts/test-estudante-fluxo-completo.ts",
    "test:suite-completa": "tsx scripts/test-suite-completa-all-roles.ts",
    "test:ai-assistant": "tsx scripts/test-ai-assistant.ts",
    "test:email-fluxo": "tsx scripts/test-email-fluxo.ts",
    "test:consistencia-perfil": "tsx scripts/test-consistencia-perfil.ts",
    "test:chat-fluxo": "tsx scripts/test-chat-fluxo-completo.ts",
    "test:perfil-alterar-senha": "tsx scripts/test-perfil-alterar-senha.ts",
    "test:ano-letivo-instituicao-secundaria": "tsx scripts/test-ano-letivo-instituicao-secundaria.ts",
    "test:plano-ensino-fluxo-secundario": "tsx scripts/test-plano-ensino-fluxo-completo-secundario.ts",
    "test:ensino-secundario-fluxo-completo": "tsx scripts/test-ensino-secundario-fluxo-completo.ts",
    "test:fluxo-ensino-secundario": "tsx scripts/test-fluxo-ensino-secundario.ts",
    "test:backup-fluxo-completo": "tsx scripts/test-backup-fluxo-completo.ts",
    "test:fluxo-comercial": "tsx scripts/test-fluxo-comercial-completo.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.17.4",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "tsx": "^4.19.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.1",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^4.0.18"
  }
}
